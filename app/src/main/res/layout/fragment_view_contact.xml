<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkerGrey"
    >
    <TextView
        android:id="@+id/viewContactNameHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="TextView"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewContactNameHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/viewContactName"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="text"
        android:background="@drawable/rounded"
        android:layout_gravity="center"
        android:textColor="#000000"
        />









    <TextView
        android:id="@+id/viewContactIdHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewContactName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView

        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewContactIdHeading"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/viewContactId"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        android:background="@drawable/rounded"
        android:layout_gravity="center"
        android:textColor="#000000"
        />



    <TextView
        android:id="@+id/viewContactNoHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewContactId"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView

        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewContactNoHeading"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/viewContactNum"
        android:gravity="center"
        android:layout_width="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:background="@drawable/rounded"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        />







    <Button
        android:id="@+id/viewContactEditBtn"
        android:layout_width="300dp"
        app:layout_constraintHorizontal_bias="0.495"

        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewContactFav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_rounded"
        android:textColor="#ffffff"
        android:text="Button" />

    <CheckBox
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/viewContactNum"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/viewContactFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favourite"
        android:clickable="false"
        />

    <Button
        android:id="@+id/viewContactDeleteButton"
        android:layout_width="300dp"
        android:background="@drawable/blue_rounded"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"

        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/viewContactEditBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="300dp"
        android:background="@drawable/blue_rounded"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.495"

        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/viewContactDeleteButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"

        />
    <Button
        android:id="@+id/logOutButton"
        android:layout_width="300dp"
        android:background="@drawable/blue_rounded"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintHorizontal_bias="0.495"

        app:layout_constraintTop_toBottomOf="@+id/changePasswordButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"

        />
    <Button
        android:id="@+id/editNumButton"
        android:layout_width="300dp"
        android:background="@drawable/blue_rounded"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintHorizontal_bias="0.495"

        app:layout_constraintTop_toBottomOf="@+id/logOutButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"

        />
</androidx.constraintlayout.widget.ConstraintLayout>